<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="julia_status_detalhe_item_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextInicioCinza</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="julia_status_detalhe_item_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextInicioCinza</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="julia_status_detalhe_item_left_textview" parent="julia_status_detalhe_item_title">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="julia_status_detalhe_item_right_textview">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextInicioCinza</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="login_button">
        <item name="android:background">@drawable/button_login_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_login_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="radio_buttons">
        <item name="android:textColor">@color/colorTextCinza</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="radio_buttons_horizontal">
        <item name="android:textColor">@color/filtro_cinza_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="tutorial_title">
        <item name="android:textColor">@color/tutorial_color_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="tutorial_description">
        <item name="android:textColor">@color/tutorial_color_description</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="julia_filtro_date_title">
        <item name="android:textColor">@color/filtro_cinza_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="julia_filtro_date">
        <item name="android:textColor">@color/filtro_cinza2_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:focusable">false</item>
    </style>
    <style name="julia_filtro_date.agenda_reuniao">
        <item name="android:paddingStart">28dp</item>
    </style>

    <style name="text_input_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="status_pedido_carteira_card_top_title1">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="status_pedido_carteira_card_top_title2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="status_pedido_carteira_card_text1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/statusPedidoCarteiraLabelGray</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="status_pedido_carteira_card_text2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/statusPedidoCarteiraLabelBlack</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="status_pedido_carteira_card_text3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/statusPedidoCarteiraLabelBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="clientes_filtro_text">
        <item name="android:textColor">@color/filtro_cinza_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

