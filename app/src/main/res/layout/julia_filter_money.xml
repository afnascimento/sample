<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:text="@string/minimo"
            android:textSize="14sp"
            android:textColor="@color/filtro_cinza_text"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/rs_money"
                android:textSize="12sp"
                android:textColor="@color/filtro_cinza_text"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.unilever.julia.ui.component.CurrencyEditText
                    android:id="@+id/editMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/filtro_cinza2_text"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="numberDecimal"
                    app:groupDivider="."
                    app:monetaryDivider=","
                    app:locale="pt_BR"
                    app:showSymbol="false"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>