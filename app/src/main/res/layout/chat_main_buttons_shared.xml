<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View android:id="@+id/lineTop"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorStrokeEditTextChat"/>

    <com.unilever.julia.components.ButtonsBottom
        android:id="@+id/buttonsShared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:btnBottomTextLeft="@string/cancelar"
        app:btnBottomTextRight="@string/compartilhar"/>

</LinearLayout>