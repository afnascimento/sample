<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorChatBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.unilever.julia.components.LoadView
        android:visibility="gone"
        android:id="@+id/loadView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"/>

    <com.unilever.julia.components.IpvOfertasCard
        android:id="@+id/ipvOfertasCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_start_32dp"
        android:layout_marginBottom="@dimen/margin_end_32dp"
        android:layout_marginStart="@dimen/margin_start_24dp"
        android:layout_marginEnd="@dimen/margin_end_24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/ipv_ofertas_holder"/>

</LinearLayout>