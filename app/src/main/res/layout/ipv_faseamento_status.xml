<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <com.unilever.julia.components.JuliaTextViewIcon
        android:id="@+id/iconStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextGray2"
        android:textSize="88sp"
        app:julTextViewIcon="CALENDARIO" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStatusTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/parabens_title"
        android:textColor="@color/colorTextGray1"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStatusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_24dp"
        android:layout_marginEnd="@dimen/margin_end_24dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/parabens_message"
        android:textColor="@color/colorTextGray1"
        android:textSize="16sp"
        app:fontFamily="@font/roboto_regular" />

</LinearLayout>