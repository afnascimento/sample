<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/buttonComponentClick"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/julia_button_shape"
        android:clickable="true"
        android:focusable="true">

    <androidx.appcompat.widget.AppCompatTextView
            android:visibility="gone"
            android:id="@+id/tvDescriptionCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/status_do_pedido"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/buttonComponentBlue"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:visibility="visible"
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/status_do_pedido"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/buttonComponentBlue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvIcon"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"/>

    <com.unilever.julia.components.JuliaTextViewIcon
            android:visibility="visible"
            android:id="@+id/tvIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/buttonComponentBlue"
            android:paddingEnd="8dp"
            android:paddingStart="0dp"
            app:julTextViewIcon="HOME_CARE"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/tvDescription"
    />

</androidx.constraintlayout.widget.ConstraintLayout>