<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_start_32dp"
    android:paddingEnd="@dimen/margin_end_32dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetailNotificationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/data_agenda"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:fontFamily="@font/roboto_bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetailNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="@string/loren_text"
        android:textColor="@color/colorTextCinza"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetailNotificationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/loren_text"
        android:textColor="@color/colorTextCinza"
        android:textSize="16sp" />

</LinearLayout>