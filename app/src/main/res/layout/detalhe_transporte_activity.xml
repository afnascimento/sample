<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorChatBg"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include layout="@layout/toolbar_back"
                 android:id="@+id/contentTop"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>

        <com.unilever.julia.components.LoadView
                android:id="@+id/juliaLoadView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <com.unilever.julia.ui.component.JuliaStatusDetalheCard
                android:id="@+id/juliaStatusDetCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/padding_start"
                android:layout_marginEnd="@dimen/padding_end"/>

    </LinearLayout>

</ScrollView>