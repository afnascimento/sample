<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/buttonComponentClick"
        android:layout_width="@dimen/button_outlook_width"
        android:layout_height="@dimen/button_outlook_height"
        android:background="@drawable/button_outlook_bg">

    <com.unilever.julia.components.JuliaTextViewIcon
            android:id="@+id/juliaTextViewIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            app:julTextViewIcon="OUTLOOK"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/outlook"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/roboto_regular"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/juliaTextViewIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>