<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/selecione_o_intervalo"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/filtro_cinza2_text"
                android:layout_marginTop="20dp"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/appCompatTextView2"/>

        <com.unilever.julia.ui.component.JuliaFiltroDateComponent
                android:id="@+id/filtroDtInit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:paddingBottom="10dp"
                android:gravity="center|bottom"
                android:text="@string/traco"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/filtro_cinza2_text"
                app:layout_constraintTop_toTopOf="@+id/filtroDtInit"
                app:layout_constraintBottom_toBottomOf="@+id/filtroDtInit"
                app:layout_constraintStart_toEndOf="@+id/filtroDtInit"
                android:id="@+id/appCompatTextView"/>

        <com.unilever.julia.ui.component.JuliaFiltroDateComponent
                android:id="@+id/filtroDtEnd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/appCompatTextView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>