<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <include
        layout="@layout/ipv_left_layout"
        android:id="@+id/contentLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/contentItems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHorizontal_bias="1.0"/>

    <LinearLayout
        android:id="@+id/contentItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contentLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintHorizontal_bias="1.0"
        android:paddingStart="5dp"
        android:paddingEnd="0dp">

        <include layout="@layout/ipv_item_layout"/>

        <include layout="@layout/ipv_item_layout"/>

        <include layout="@layout/ipv_item_layout"/>

        <include layout="@layout/ipv_item_layout"/>

        <include layout="@layout/ipv_item_layout"/>

        <include layout="@layout/ipv_item_layout"/>

        <include layout="@layout/ipv_item_layout"/>

        <include layout="@layout/ipv_item_layout"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>