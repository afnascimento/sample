<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/innovation_detail_title"
        android:id="@+id/tvGeralTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/avaliar"
        android:layout_marginStart="@dimen/padding_start"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorChatBg"
        android:padding="12dp"
        android:layout_marginTop="@dimen/innovation_v2_margin_top_32dp">

        <com.ashokslsk.androidabcd.squarerating.SquareRatingView
            style="?android:attr/ratingBarStyle"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            app:setNumSquare="5"
            app:setRating="0"
            app:setSelectedResource="@drawable/ic_star_blue"
            app:setStepSize="1"
            app:setUnSelectedResource="@drawable/ic_star_stroke_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/innovation_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tradestory_evaluation_description"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/innovation_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tradestory_evaluation_opinion"
        android:layout_marginTop="@dimen/innovation_v2_margin_top_24dp"
        android:layout_marginStart="34dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_black"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="32dp"
        android:inputType="textNoSuggestions"
        android:imeOptions="actionDone"/>

</LinearLayout>