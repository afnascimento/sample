<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentButtons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDivisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <com.unilever.julia.components.ButtonIconBadge
        android:id="@+id/btnLeft"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:btnIcBdEnabled="true"
        app:btnIcBdText="@string/filtros"
        app:btnIcBdTextColor="@color/colorWhite"
        app:btnIcBdEnabledColor="@color/colorBlue"
        app:btnIcBdDisabledColor="@color/colorDisabled"
        app:btnIcBdIcon="@drawable/ic_icone_filtro"
        app:btnIcBdIconVisible="true"
        app:btnIcBdBadgeVisible="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineDivisor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.unilever.julia.components.ButtonIconBadge
        android:id="@+id/btnRight"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:minHeight="45dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:btnIcBdBadgeVisible="false"
        app:btnIcBdDisabledColor="@color/colorDisabled"
        app:btnIcBdEnabled="false"
        app:btnIcBdEnabledColor="@color/colorBlue"
        app:btnIcBdIconVisible="false"
        app:btnIcBdText="@string/redefinir_filtros"
        app:btnIcBdTextColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineDivisor"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>