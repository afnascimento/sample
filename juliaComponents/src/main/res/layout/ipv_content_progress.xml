<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorChatBg"
    android:paddingTop="@dimen/margin_top_24dp">

    <com.unilever.julia.components.JuliaTextViewIcon
        android:id="@+id/textViewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="@color/colorTextGray1"
        android:textSize="22sp"
        app:julTextViewIcon="ICON_KG"
        app:layout_constraintBottom_toBottomOf="@+id/progressHorizontal"
        app:layout_constraintStart_toStartOf="parent" />

    <com.unilever.julia.components.ProgressHorizontal
        android:id="@+id/progressHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="36dp"
        android:text="@string/ipv_progress_text"
        android:textColor="@color/colorTextGray1"
        android:textSize="14sp"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressHorizontal"
        app:layout_constraintStart_toStartOf="@+id/progressHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/progressHorizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>