<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

     <com.unilever.julia.components.JuliaAnswerComponent
         android:id="@+id/julAnswerCard"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:julAnsCompText="@string/julia_chat_msg"/>

     <com.unilever.julia.components.boletim.BoletimCardProgress
         android:id="@+id/boletimCardProgress"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/padding_start"
         android:layout_marginEnd="@dimen/padding_end"
         android:layout_marginBottom="@dimen/padding_bottom"
         app:cardElevation="4dp"
         app:cardCornerRadius="@dimen/bg_corner_radius"/>

</LinearLayout>