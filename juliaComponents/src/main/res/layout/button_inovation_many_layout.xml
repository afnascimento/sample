<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contentClick"
        android:layout_width="@dimen/button_innovation_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_buttom_horizontal_ripple"
        android:clickable="true"
        android:focusable="true">

    <com.unilever.julia.components.ButtonIconRound
            android:id="@+id/btIconRound"
            android:layout_width="@dimen/button_innovation_icon_width"
            android:layout_height="@dimen/button_innovation_icon_height"
            android:layout_marginTop="10dp"
            app:julTextViewIcon="HOME_CARE"
            app:btIcRoundTextSize="@dimen/button_innovation_icon_size"
            app:btIcRoundBgColor="@color/colorButtonGray"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/inovation_title"
            android:textSize="@dimen/button_innovation_text_title"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorTextGray"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/inovation_projects"
            android:textSize="@dimen/button_innovation_text_description"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorTextGray"/>

</LinearLayout>