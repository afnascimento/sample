<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <View
        android:id="@+id/strokeTop"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorStrokeGray"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/innovation_v2_margin_start"
        android:paddingEnd="@dimen/innovation_v2_margin_end"
        android:paddingTop="@dimen/innovation_v2_margin_top_32dp"
        android:paddingBottom="@dimen/innovation_v2_margin_bottom_32dp">

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/innovation_detail_title"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/midias"/>

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/innovation_detail_description"
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loren_text"
                android:layout_marginTop="@dimen/innovation_v2_margin_top_24dp"/>

    </LinearLayout>

</LinearLayout>