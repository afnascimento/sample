<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_tags_view"
    android:minHeight="45dp"
    android:padding="10dp"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginStart="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvItemSelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/tags_view_max_width"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/_0010587057"
        android:textColor="@color/colorTextCinza"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/btnDelete"
        layout="@layout/tags_btclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>